<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".view.CountryFragment">
    <ImageView
        android:id="@+id/countryImage"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:paddingTop="10dp"
        android:minHeight="200dp">

    </ImageView>
    <TextView
        android:id="@+id/countryName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countryImage"
        android:text="Counrty Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:padding="5dp">

    </TextView>
    <TextView
        android:id="@+id/countryCapital2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countryName2"
        android:text="Counrty Capital"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:padding="5dp">

    </TextView>
    <TextView
        android:id="@+id/countryRegion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countryCapital2"
        android:text="Counrty Region"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:padding="5dp">

    </TextView>
    <TextView
        android:id="@+id/countryCurrency2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countryRegion2"
        android:text="Counrty Currency"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:padding="5dp">

    </TextView>
    <TextView
        android:id="@+id/countryLanguage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countryCurrency2"
        android:text="Counrty Language"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:padding="5dp">
    </TextView>
</RelativeLayout>
</layout>